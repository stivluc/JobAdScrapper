# Configuration sécurisée des APIs - Copiez ce fichier vers .env et remplissez vos clés

# Adzuna API (gratuit avec inscription sur https://developer.adzuna.com/)
ADZUNA_APP_ID=your_app_id_here
ADZUNA_APP_KEY=your_app_key_here

# RapidAPI (optionnel - pour JSearch et autres APIs)
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_APP=your_rapidapi_app_here

# Autres APIs (optionnelles)
GITHUB_TOKEN=your_github_token_here
LINKEDIN_API_KEY=your_linkedin_key_here

# Configuration Flask (changez cette clé)
FLASK_SECRET_KEY=change_this_secret_key_in_production

# Mode debug (true/false)
DEBUG_MODE=true